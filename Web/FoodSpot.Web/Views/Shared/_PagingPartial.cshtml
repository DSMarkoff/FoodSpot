@model FoodSpot.Web.ViewModels.Recipes.RecipesPagingViewModel

<h4 class="text-black text-center mb-4"> Page @Model.CurrentPage of @Model.MaxPage</h4>
<hr />
<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center">
        <li class="page-item @(Model.CurrentPage >= 2 ? string.Empty : "disabled")">
            <a class="page-link" asp-action="All" asp-route-id="@(Model.CurrentPage - 1)">Previous</a>
        </li>

        @for (int i = Model.CurrentPage - 3; i < Model.CurrentPage; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }

        <li class="page-item active" aria-current="page">
            <a class="page-link">
                @Model.CurrentPage
                <span class="sr-only">(current)</span>
            </a>
        </li>

        @for (int i = Model.CurrentPage + 1; i <= Model.CurrentPage + 3; i++)
        {
            if (i <= Model.MaxPage)
            {
                <li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }

        <li class="page-item @(Model.CurrentPage < Model.MaxPage ? string.Empty : "disabled")">
            <a class="page-link" asp-action="All" asp-route-id="@(Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>

