@model FoodSpot.Web.ViewModels.Recipes.HomeViewModel
@using FoodSpot.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="jumbotron my-4 rounded shadow text-center text-white">
        <h1 class="display-4 text-black font-italic"><strong>Quick search</strong></h1>
        <p class="font-weight-bold lead p-3">
            Enter the name of the recipe you are looking for and then choose the category.
        </p>
        <form method="get" asp-action="Result" class="col-6 offset-3">
            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold h4"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="font-weight-bold h4"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories"></select>
            </div>
            <div class="row justify-content-center">
                <button class="btn btn-primary btn-lg">Search</button>
            </div>
        </form>
    </div>
</div>
