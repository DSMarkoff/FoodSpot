@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="jumbotron my-4 rounded shadow text-center text-white">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-md-6 offset-md-3">
        <h1 class="display-4 text-black font-italic"><strong>@this.ViewData["Title"]</strong></h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email" class="font-weight-bold h5"></label>
            <input asp-for="Input.Email" class="form-control" autocomplete="off"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="font-weight-bold h5"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="font-weight-bold h5"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
    </form>
</div>
